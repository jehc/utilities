d=`dirname "$_"`
prefix=`dirname "$d"`
libdir="$prefix/lib"
exec_prefix="$prefix"
incdir="$prefix/include"

usage()
{
	cat <<EOF
Usage: nestk-config [OPTIONS]
Options:
	[--version]
	[--cmakedir]
EOF
	exit $1
}

####

if test $# -eq 0; then
	usage 1 1>&2
fi

while test $# -gt 0; do
    case $1 in
        --version)
            echo Nes Toolkit ${NESTK_VERSION}
            exit 0
            ;;

        --cmakedir)
            echo ${CMAKE_INSTALL_PREFIX}/share/nestk/cmake
            ;;

        *)
            usage 1 1>&2
            ;;
    esac
    shift
done
